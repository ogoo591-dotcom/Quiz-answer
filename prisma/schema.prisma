datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Article {
  id        String      @id @default(cuid())
  title     String
  content   String
  summary   String

  userId    String
  user      User        @relation(fields: [userId], references: [id])

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  quizzes   Quiz[]
}

model User {
  id          String        @id @default(cuid())
  clerkId     String        @unique
  email       String        @unique
  name        String?

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  articles     Article[]
  quizAttempts QuizAttempt[]
  userScores   UserScore[]
}

model Quiz {
  id        String      @id @default(cuid())
  question  String
  options   String[]
  answer    String

  articleId String
  article   Article     @relation(fields: [articleId], references: [id])

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  quizAttempts QuizAttempt[]
  userScores   UserScore[]
}

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  quizId    String
  selected  String   // → хэрэглэгчийн сонгосон хариулт
  isCorrect Boolean

  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  quiz      Quiz     @relation(fields: [quizId], references: [id])
}

model UserScore {
  id        String   @id @default(cuid())
  userId    String
  quizId    String
  score     Int

  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  quiz      Quiz     @relation(fields: [quizId], references: [id])
}